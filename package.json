{
  "name": "git-history-ui",
  "version": "1.0.1",
  "description": "Beautiful git history visualization in your browser",
  "main": "dist/cli.js",
  "bin": {
    "git-history-ui": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.json",
    "build:frontend": "cd frontend && ng build --configuration production",
    "build:production": "NODE_ENV=production npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "ts-node-dev --respawn --transpile-only src/backend/dev-server.ts",
    "dev:frontend": "cd frontend && ng serve --port 4200",
    "start": "node dist/backend/server.js",
    "start:production": "NODE_ENV=production node dist/backend/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "git",
    "history",
    "visualization",
    "cli",
    "ui",
    "commit",
    "graph",
    "diff",
    "angular"
  ],
  "author": "beingmartinbmc",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "open": "^9.1.0",
    "simple-git": "^3.20.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/open": "^6.2.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beingmartinbmc/git-history-ui.git"
  },
  "bugs": {
    "url": "https://github.com/beingmartinbmc/git-history-ui/issues"
  },
  "homepage": "https://github.com/beingmartinbmc/git-history-ui#readme"
}
